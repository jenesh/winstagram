<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Home</title>
    <link rel="stylesheet" href="/homepage/homepage.css">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
</head>
<body>
    <div class="container">

        <div id="homepageBtn" class="btn valign-wrapper">
            <i class="material-icons">home</i>
            <span class="">Home Page</span>
        </div>

        <div id="photoBtn" class="btn valign-wrapper">
                <i class="material-icons">image</i>
                <span class="">My Photos</span>
        </div>

        <div id="logOut" class="btn right">
                <i class="material-icons">lock</i>
                <span>Log Out</span>
        </div>


        <h1 class="center-align">Welcome to your profile page <%= user.firstname[0].toUpperCase() + user.firstname.slice(1) %>!</h1>
        
        <div id='holder'>
        <% data.posts.forEach(ele => { %>      
    
        <div id = '<%=ele.id_post%>'class="card grey lighten-5 z-depth-1 hoverable">
                <div class="row">
                    <div class="profile-img col s2">
                        <img src="<%= ele.profile_img %>" alt="" class="circle responsive-img">
                    </div>
                    <div class="">
                        <span class="middle"> <%= ele.firstname[0].toUpperCase() + ele.firstname.slice(1) %> <%= ele.lastname[0].toUpperCase() + ele.lastname.slice(1) %></span>
                        <div class="edit">
                            <ul id="dropdown<%=ele.id_post%>" class="dropdown-content edit-dropdown">
                                <li class='edit-button' data-postId='<%=ele.id_post%>'>
                                    <a data-postId='<%=ele.id_post%>'>
                                        <i class="material-icons right" data-postId='<%=ele.id_post%>'>edit</i>
                                    </a>
                                </li>
                                <li class='delete-button' data-postId='<%=ele.id_post%>'>
                                    <a data-postId='<%=ele.id_post%>'>
                                        <i class="material-icons right" data-postId='<%=ele.id_post%>'>delete</i>
                                    </a>
                                </li>
                            </ul>
                            <a class="floating-btn dropdown-trigger" data-target="dropdown<%=ele.id_post%>">
                                <i class="material-icons right">arrow_drop_down</i>
                            </a>
                        </div>
                        <br>
                        <br>
                        <p class="black-text" id='<%= ele.id_post%>'>
                            <%= ele.body_post%>
                        </p>
                        <span class='time right'>
                            <%
                                const arr = ele.time_post.split(' ')
                                const date = arr[0].split('-')
                                const oldDate = new Date(ele.time_post)
                                const today = new Date()
                            %>
                            <%= Math.floor((today - oldDate) / (1000 * 3600) * 60) %> mins ago
                        </span>
                    </div>
                </div>
            </div>

        <% }) %>
        </div>
    </div>
    
    <script src="/profile/profile.js"></script>
</body>
</html>